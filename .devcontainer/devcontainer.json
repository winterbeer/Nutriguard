{
  "name": "NutriGuard Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "postCreateCommand": "pip install -r backend/requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot-chat",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "vscode"
}
